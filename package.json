{
  "name": "kap-bist-data-scraper",
  "version": "1.0.0",
  "type": "module",
  "description": "KAP BIST şirket bilgileri kazıma projesi - TypeScript + Playwright + PostgreSQL",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "scrape:indices": "tsx src/scrapers/indices-scraper.ts",
    "scrape:sectors": "tsx src/scrapers/sectors-scraper.ts",
    "scrape:markets": "tsx src/scrapers/markets-scraper.ts",
    "scrape:companies": "tsx src/scrapers/companies-list-scraper.ts",
    "scrape:all": "tsx src/orchestrator.ts",
    "db:check": "tsx check-db.ts",
    "db:summary": "bash -lc 'if [ -f .venv/bin/activate ]; then source .venv/bin/activate; fi; python scripts/quick_data_summary.py'"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "playwright": "^1.47.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "prisma": "^6.17.1",
    "tsx": "^4.16.2",
    "typescript": "^5.6.0"
  }
}
